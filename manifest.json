{
  "manifest_version": 2,

  "name": "Believe Tools",
  "description": "Just simple shortcuts ....",
  "version": "1.0.0",

  "browser_action": {
   "default_icon": "img/icon.png",
   "default_popup": "popup.html"
  },
  "content_scripts": [
        {
        "matches": [
            "http://*/*",
            "https://*/*"
            ],
        "js": ["content.js"],
        "run_at": "document_end"
        }
    ],
  "permissions": [
     "activeTab",
     "tabs"
   ],
   "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
